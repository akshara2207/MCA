class Solution:
    def mostWordsFound(self, sentences: List[str]) -> int:
        max_words = 0
        for sen in sentences:
            word_count = len(sen.split())     #sentence = "i think so too"
                                               sentence.split() â†’ ['i', 'think', 'so', 'too']
            max_words = max(max_words, word_count)
        return max_words   
